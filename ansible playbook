---
 - hosts: agent
   tasks:
     - name: create a file
       file:
        path: /root/vijay
        state: touch

     - name: create a directory
       file:
        path: /root/dir.kumar
        state: directory

     - name: copy a file to root
       copy:
        src: /root/vijay
        dest: /opt

